<!DOCTYPE html>
<html lang="nl">
<head>
	<%- include('partials/Head.ejs') %> 
</head>
<body>
	<header class="zoekheader">
		<div id="wrap">
			<form action="/" autocomplete="on" id="zoek-form">
				<input list="search" id="search-choice" name="searchChoice" placeholder="Wat zoekt u?">
				<datalist id="search">
					<% allItems.forEach(item => { %>
						<option value="<%= item.fields.titel %>">
					<% }) %>
					<% allTags.forEach(tag => { %>
						<option value="<%= tag %>">
					<% }) %>
				</datalist>
				<input id="search_submit" value="Rechercher" type="submit">
			</form>
		</div>
		<div class="buttons">
			<%- include('partials/HeaderNav.ejs') %> 
		</div>
	</header>
	<main class="landingspage">
		<section class="ehealthitemscontainer">
			<% allItems.forEach(item => { %>
				<a href="/producten/<%= item.fields.slug %>">
					<article data-id="<%= item.fields.newTags %>" data-title="<%= item.fields.slug %>"  class="ehealth-item">
						<% if(item.fields.afbeelding) { %>
							<img src="<%= item.fields.afbeelding.fields.file.url %>" alt="">
						<% } %>
						<h3><%= item.fields.titel %></h3>
						<h5><%= item.fields.newTags %></h5>
					</article>
				</a>
			<% }) %>
		</section>
        <h3>Recent bekeken</h3>
		<section class="recentlyviewed">
			<% for( let index = 0; index < recentItems.length; index++ ) { %>
				<a href="/producten/<%= recentItems[index].fields.slug %>">
					<article data-id="<%= recentItems[index].fields.newTags %>" data-title="<%= recentItems[index].fields.slug %>"  class="ehealth-item">
						<% if(recentItems[index].fields.afbeelding) { %>
							<img src="<%= recentItems[index].fields.afbeelding.fields.file.url %>" alt="">
						<% } %>
						<h3><%= recentItems[index].fields.titel %></h3>
						<h5><%= recentItems[index].fields.newTags %></h5>
					</article>
				</a>
			<% } %>
		</section>
	</main>
</body>
</html>
