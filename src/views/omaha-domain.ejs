<!DOCTYPE html>
<html lang="nl">
<head>
	<%- include('partials/Head.ejs') %> 
</head>
<body>
	<header>
		<h1>

		</h1>
	</header>
	<main class="omaha">
		<form class="omaha-form" action="/omaha-domein" method="POST">
			<% filterData.forEach(domein => { %>
				<fieldset data-id="<%= domein.id %>" class="<%= domein.id %>-container domein-tag-fieldset">
					<legend>
						<% if(domein.domein === 'Risicofactoren') { %>
							Kies een eigenschap binnen <%= domein.domein %>
						<% } else { %>
							Kies een eigenschap binnen het <%= domein.domein %>
						<% } %>
					</legend>
					<div class="domein-tag-input-container">
						<% domein.domeinTags.forEach(tag => { %>
							<input class="omaha-domein-tag-input" id="<%= tag.slug %>" type="radio" name="domeinTags" value="<%= tag.slug %>">
							<label class="omaha-domein-tag-label" for="<%= tag.slug %>">
								<%= tag.tag %>
							</label>
						<% }) %>
					</div>
				</fieldset>
			<% }) %>
			<div class="buttons-container">
				<a class="omaha-form-button back" href="/omaha-filter">Terug</a>
				<button id="omaha-submit" class="omaha-form-button" type="submit">Submit</button>
			</div>
		</form>
	</main>
</body>
</html>